{
  "run": {
    "concurrency": 0,
    "timeout": "10m",
    "issues-exit-code": 1,
    "tests": true,
    "build-tags": [
      "tag"
    ],
    "modules-download-mode": "readonly",
    "allow-parallel-runners": true,
    "allow-serial-runners": true
  },
  "output": {
    "sort-results": true,
    "sort-order": [
      "linter",
      "severity",
      "file"
    ]
  },
  "linters": {
    "disable-all": true,
    "enable": [
      "unused",
      "errcheck",
      "staticcheck",
      "gosimple",
      "ineffassign",
      "govet",
      "bidichk",
      "asasalint",
      "nilerr",
      "nilnil",
      "wastedassign",
      "unparam",
      "unconvert",
      "prealloc"
    ]
  },
  "linters-settings": {
    "staticcheck": {
      "checks": [
        "all",
        "-ST1000",
        "-ST1020",
        "-SA1029"
      ]
    }
  }
}
